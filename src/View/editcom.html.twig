{% extends "layoutAdmin.html.twig" %} {% block content %}
<div class="container">
    <section class="row">
        <div class="cadre col-xs-12">


            <h3>Modifier le commentaire :</h3>

            <div class="form">

                {{ form_start(form, {'attr': {'class': ' '}}) }} {{ form_errors(form)}}
                
                <div class="form-group">
                    {{ form_label(form.pseudo, 'pseudo', {'label_attr': {'class': 'control-label'}})}}<br>
                    {{ form_errors(form.pseudo) }}
                    {{ form_widget (form.pseudo, {'attr': {'class': '' }}) }}<br>
                </div>

                <div class="form-group">
                    {{ form_label(form.comment, 'commentaire', {'label_attr': {'class': 'control-label'}})}}<br>
                    {{ form_errors(form.comment) }}
                    {{ form_widget (form.comment, {'attr': {'class': 'col-xs-12 ' }}) }}<br>
                </div>
                


                 {% for message in messages %}
                 <h3 class="redAlert">Ce commentaire a été signalé pour le motif suivant :</h3>
                <blockquote>
                    <p class>{{ message.message }}</p>
                </blockquote>
                {% endfor%}
                
                <div class="form-group">
                {{ form_row(form.signale, {'label': 'Signaler :'}) }}
                </div>
                
                
                
                <div class="col-xs-8 col-xs-offset-4">   
                    {{form_widget(form.save, {'label': 'editer','attr': { 'class': 'btn btn-primary '}}) }} 
                    <a class="btn btn-danger btn-xs " href="http://framework.dev/admin/deletecom/{{comment.id}}"><i class="fa fa-trash-o" aria-hidden="true"></i> Supprimer</a>
                </div>
                
                {{ form_end(form)}}
            </div><br>
                <a href="http://framework.dev/admin/accueil"  class="btn btn-default col-xs-2"><i class="glyphicon glyphicon-chevron-left"></i>Retour</a>
        </div>
    </section>
</div>

{% endblock %}